{
  "name": "hapi-bouncer",
  "version": "1.0.3",
  "description": "hapi bouncer proxy",
  "repository": {
    "type": "git",
    "url": "https://github.com/zerkalica/hapi-bouncer"
  },
  "bin": {
    "hapi-bouncer": "bin/hapi-bouncer"
  },
  "config": {
    "builddir": "dist"
  },
  "scripts": {
    "prepublish": "conf/resources/prepublish.sh",
    "preversion": "conf/resources/checkgit.sh && npm test && npm run build",
    "postversion": "git push && git push --tags",
    "clean": "rm -rf $npm_package_config_builddir",
    "ver": "conf/resources/gen-version.sh",
    "build": "npm run clean && babel src --ignore=__tests__ --source-maps --out-dir $npm_package_config_builddir",
    "build.babel": "npm run clean && babel src --source-maps --out-dir $npm_package_config_builddir",
    "check": "flow check",
    "testonly": "mocha",
    "test": "mocha && flow check",
    "test.dev": "npm run testonly -- --growl --watch"
  },
  "keywords": [
    "web",
    "ssl",
    "proxy",
    "bouncer",
    "hapi"
  ],
  "files": [
    "*.map",
    "*.js",
    "*.flow",
    ".flowconfig",
    "README.md",
    "LICENSE",
    "src",
    "flow-typed",
    "dist"
  ],
  "author": "Stefan Zerkalica <zerkalica@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "debug": "^2.2.0",
    "yargs": "^5.0.0",
    "node-config-loader": "^2.1.0",
    "find-root": "^1.0.0",
    "h2o2": "^5.1.1",
    "hapi": ">= ^14.0.0",
    "inert": "^4.0.2",
    "vision": "^4.1.0",
    "wreck": "^10.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-plugin-espower": "^2.3.1",
    "babel-plugin-module-resolver": "^2.2.0",
    "babel-plugin-syntax-decorators": "^6.13.0",
    "babel-plugin-syntax-flow": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2015-loose": "^8.0.0",
    "babel-preset-stage-0": "^6.5.0",
    "glob": "^7.1.0",
    "mocha": "^3.0.2",
    "power-assert": "^1.4.1",
    "sinon": "^1.17.6"
  }
}
